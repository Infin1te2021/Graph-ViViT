{
    "name": "60CV",
    "n_gpu": 2,
    "pretrain": "",
    "arch": {
        "type": "VideoViT_GraphEmbd_STB",
        "args": {
            "image_size": [
                25,
                2
            ],
            "image_patch_size": [
                1,
                1
            ],
            "frames": 64,
            "frame_patch_size": 4,
            "num_classes": 60,
            "dim": 96,
            "spatial_depth": 6,
            "temporal_depth": 6,
            "heads": 8,
            "mlp_dim": 384,
            "pool": "cls",
            "channels": 3,
            "dim_head": 32,
            "dropout": 0.1,
            "emb_dropout": 0.1,
            "variant": "factorized_encoder",
            "spatial_bias": true, 
            "temporal_bias": true
        }
    },
    "data_loader": {
        "type": "NPZNTUDataLoader",
        "args": {
            "data_dir": "data/ntu/NTU60_CV.npz",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 64,
            "persistent_workers": true
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.1
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
            "label_smoothing": 0.1
        }
    },
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "CosineLRScheduler",
        "args": {
            "warm_up_epoch": 25,
            "lr_min": 1e-05,
            "warmup_lr_init": 1e-07,
            "warmup_prefix": false,
            "t_in_epochs": false
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "min val_loss",
        "early_stop": 35,
        "tensorboard": true
    }
}